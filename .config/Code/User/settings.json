{
  "breadcrumbs.enabled": true,

  "css.validate": false,

  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,
  "diffEditor.renderIndicators": true,
  // "editor.fontFamily": "'Ubuntu Mono', Consolas, 'Courier New', monospace",
  // "editor.glyphMargin": false,  // get ridd off infrequently used area
  "editor.hover.delay": 600,
  // "editor.lineNumbers": "off", // get ridd off infrequently used area
  "editor.minimap.enabled": false, // get ridd off infrequently used area
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [ 88, 119 ],
  "editor.showFoldingControls": "mouseover",
  // "editor.folding": false,  // get ridd off infrequently used area
  "editor.tabSize": 2,

  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 0,

  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": false,

  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": false,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true,
  },
  "files.associations": {
    "*.jsonc": "jsonc"
  },

  "git.enabled": true,
  "git.enableSmartCommit": false,

  "remote.SSH.showLoginTerminal": true,

  "search.showLineNumbers": false,
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.venv": true,
  },

  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,

  "terminal.integrated.rendererType": "dom", // https://code.visualstudio.com/docs/editor/integrated-terminal#_changing-how-the-terminal-is-rendered
  "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
  "terminal.integrated.shellArgs.windows": [ "-l" ],

  "window.menuBarVisibility": "toggle",
  "window.titleBarStyle": "custom",
  "window.zoomLevel": -1,

  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "eq-material-theme-icons-palenight",
  "workbench.settings.editor": "json",
  "workbench.editor.showTabs": true,
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "newUntitledFile",

  "yaml.format.enable": true,

  // ============================================================================
  //
  //     Languages
  //
  // ============================================================================

  "go.useLanguageServer": true,

  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  "[javascript]": {
    "editor.codeLens": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    // "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "javascript.referencesCodeLens.enabled": true,
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",

  "[json]": {
    "editor.codeLens": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },

  "[markdown]": {
    "editor.codeLens": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "fcrespo82.markdown-table-formatter",
  },

  "[python]": {
    "editor.codeLens": true,
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true,
    },
  },
  "python.formatting.blackPath": "black",
  "python.formatting.provider": "black",
  "python.insidersChannel": "daily",
  "python.languageServer": "Pylance",
  "python.terminal.activateEnvironment": false,

  "[shellscript]": {
    "editor.codeLens": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },

  "[typescript]": {
    "editor.codeLens": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.referencesCodeLens.enabled": true,
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

