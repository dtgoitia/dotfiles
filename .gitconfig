[user]
  email = david.torralba.goitia@gmail.com
  name = David Torralba Goitia

[alias]
  ch = checkout
  br = branch
  co = commit
  st = status
  ps = push
  pl = push
  lg = log --oneline --all --graph --decorate
  unstage = reset HEAD --
  dtgoitia = "!f() { reponame=$1; git clone git@github.com:dtgoitia/${reponame}.git; }; f"

[core]
  editor = vim
  ignorecase = false

[code]
  excludesfile = "$HOME\\.gitignore_global"

[diff]
  tool = meld
