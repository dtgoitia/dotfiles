{
  // Place your snippets for markdown here. Each snippet is defined under a snippet name and has a prefix, body and 
  // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
  // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
  // same ids are connected.
  // Example:
  // "Print to console": {
  //   "prefix": "log",
  //   "body": [
  //     "console.log('$1');",
  //     "$2"
  //   ],
  //   "description": "Log output to console"
  // }
  "PR": {
    "prefix": "pr",
    "body": [
      "- Create PR: $1",
      "- Monitor CI checks: $1",
      "- Ask CR: $1",
      "- Merge PR: $1",
      "- Monitor deployment: $1",
    ],
    "description": "Pull request record for the job log."
  },
  "Stand-up": {
    "prefix": "standup",
    "body": [
      "- Stand-up:",
      "  - Y: ?$0",
    ],
  },
  "Comms": {
    "prefix": "comms",
    "body": [
      "- Comms:",
      "  <!-- - Review Slack -->",
      "  <!-- - Review @Bulb email -->",
      "  <!-- - Review @Zoa email -->",
      "$0",
    ],
  },
  "Meeting": {
    "prefix": "meeting",
    "body": [
      "# TITLE",
      "",
      "Date: $1",
      "",
      "Attendees:",
      "",
      "  - @DavidTorralba",
      "  - ?",
      "",
      "## Prior to meeting",
      "",
      "...",
      "",
      "## Meeting invite",
      "",
      "...",
      "",
      "## Meeting minutes",
      "",
      "<!-- External references -->",
      "",
      "[1]: ___ \"___\"",
    ],
    "description": "Pull request record for the job log."
  },
  "External references": {
    "prefix": "external references",
    "body": "<!-- External references -->",
  },
}
