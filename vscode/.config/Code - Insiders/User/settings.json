  "errorLens.excludePatterns": [
    "**/*.{md}",
  ],

  "gitlens.advanced.messages": {
    "suppressGitDisabledWarning": true
  },
  "gitlens.advanced.telemetry.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.hovers.annotations.enabled": true,
  "gitlens.views.branches.avatars": false,
  "gitlens.views.branches.branches.layout": "list",
  "gitlens.views.branches.pullRequests.enabled": false,
  "gitlens.views.branches.pullRequests.showForBranches": false,
  "gitlens.views.compare.files.layout": "tree",
  "gitlens.views.search.files.layout": "list",
  "gitlens.views.showRelativeDateMarkers": false,

  "insertDateString.format": "YYYY-MM-DD",
  "insertDateString.formatTime": " hh:mm:ss ZZZ",

  "jupyter.askForKernelRestart": false,

  "markdown-preview-enhanced.enableExtendedTableSyntax": true,
  "markdown-preview-enhanced.liveUpdate": true,
  "markdown.extension.italic.indicator": "_",
  "markdown-table-formatter.markdownGrammarScopes": [
    "markdown",
    "plaintext",
    "python"
  ],

  "markdown-contacts.globalNames": [
    "DavidTorralba",
  ],

  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },

  // "prettier.configPath": ".prettier.yaml",
  // "prettier.requireConfig": true,

  "redhat.telemetry.enabled": false,

  "runOnSave.statusMessageTimeout": 3000,
  "runOnSave.commands": [
    {
      "match": "WIP_TODOs.md$",
      "command": "wipman format",
      "runIn": "backend",  // Set to "terminal" to debug
    }
  ],

  "scss.validate": false,

  "stylelint.enable": true,

  "terraform.telemetry.enabled": false,

  "todo-tree.highlights.defaultHighlight": {
    "foreground": "magenta",
    "type": "tag"
  },
  "todo-tree.tree.showScanModeButton": false,
  "todo-tree.general.tags": [
    "TODO",
    "ToDo",
    "FIXME",
    "WIP",
    "[ ]",
    "[x]"
  ],
  // "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",

  "vim.disableExtension": false,
  "vim.foldfix": true,
  "vim.handleKeys": {
    "<C-a>": false,  // Let VSCode select all
    "<C-b>": false,  // Let VSCode open/close side bar
    "<C-f>": false,  // Let VScode search
    "<C-q>": false,  // Let VScode exit
  },
  "vim.insertModeKeyBindings": [
    {
      "before": [ "j", "j" ],
      "after": [ "<Esc>" ],
    }
  ],
}
