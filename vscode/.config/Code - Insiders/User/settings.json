{
  "breadcrumbs.enabled": true,

  "css.validate": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.maxComputationTime": 0,  // in ms, use 0 for no time out
  "diffEditor.renderIndicators": true,
  "diffEditor.renderSideBySide": true,
  "editor.hover.delay": 600,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [ 80, 109 ],
  "editor.showFoldingControls": "mouseover",
  "editor.stickyScroll.enabled": true,
  "editor.tabSize": 2,

  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 0,

  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": true,  // silence extension recommendation notifications

  "files.autoSave": "off",
  
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": false,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true,
  },
  "files.associations": {
    "*.jsonc": "jsonc"
  },

  "git.enabled": true,
  "git.enableSmartCommit": false,

  "remote.SSH.showLoginTerminal": true,

  "security.workspace.trust.enabled": false,

  "search.showLineNumbers": false,
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.venv": true,
    "**/.env": true,
  },

  "telemetry.telemetryLevel": "off",

  "terminal.integrated.rendererType": "dom", // https://code.visualstudio.com/docs/editor/integrated-terminal#_changing-how-the-terminal-is-rendered
  "window.menuBarVisibility": "toggle",
  "window.titleBarStyle": "custom",
  "window.zoomLevel": -1,

  "workbench.activityBar.location": "hidden",
  "workbench.colorTheme": "One Dark Pro",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.showTabs": "multiple",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.settings.editor": "json",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "newUntitledFile",

  "yaml.format.enable": true,

  // ============================================================================
  //
  //     Languages
  //
  // ============================================================================

  "go.toolsManagement.autoUpdate": true,
  "go.useLanguageServer": true,

  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  "[javascript]": {
    "editor.codeLens": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    // "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "javascript.referencesCodeLens.enabled": true,
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",

  "[json]": {
    "editor.codeLens": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },

  "[markdown]": {
    "editor.codeLens": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "fcrespo82.markdown-table-formatter",
  },

  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
    },
    "editor.codeLens": true,
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-python.black-formatter",
  },
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.languageServer": "Pylance",
  "python.terminal.activateEnvironment": false,

  "[rust]": {
    "editor.codeLens": true,
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
  },

  "[shellscript]": {
    "editor.codeLens": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
  },

  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.codeLens": true,
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
  },
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.referencesCodeLens.enabled": true,
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  // ============================================================================
  //
  //     Extensions
  //
  // ============================================================================

